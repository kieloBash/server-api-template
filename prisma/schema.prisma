generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum AuthProvider {
  CREDENTIALS
  GOOGLE
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String?
  profile  String?

  provider AuthProvider @default(CREDENTIALS)
  googleId String?      @unique

  roleId String
  role   Role   @relation("UserRoles", fields: [roleId], references: [id])

  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Role {
  id   String @id @default(uuid())
  name String @unique

  users User[] @relation("UserRoles")
}

model OtpToken {
  id    String @id @default(uuid())
  email String
  token String

  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id    String @id @default(uuid())
  email String
  token String

  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
}
