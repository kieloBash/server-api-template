generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String?

  roleId String
  role   Role   @relation("UserRoles", fields: [roleId], references: [id])
}

model Role {
  id   String @id @default(uuid())
  name String @unique

  users User[] @relation("UserRoles")
}
